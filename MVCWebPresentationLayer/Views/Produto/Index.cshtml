@model List<MVCWebPresentationLayer.Models.ProdutoQueryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Produtos Cadastrados</h2>

<table style="color:darkblue" class="table">
    <tr style="font-size:large">
        <th style="color:darkorange">ID</th>
        <th style="color:darkorange">Descrição</th>
        <th style="color:darkorange">Preço</th>
        <th style="color:darkorange">Cor</th>
        <th style="color:darkorange">Vai Pilha</th>
    </tr>
    @foreach (MVCWebPresentationLayer.Models.ProdutoQueryViewModel item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <th>@item.Descricao</th>
            <th>@item.Preco</th>
            <th>@item.Cor</th>
            <th>@item.VaiPilha</th>
        </tr>
    }
</table>
<nav aria-label="...">
    <ul class="pagination text-justify-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Anterior</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active">
            <a class="page-link" href="#">2 <span class="sr-only">(atual)</span></a>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Próximo</a>
        </li>
    </ul>
</nav>